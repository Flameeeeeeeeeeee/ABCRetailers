        <h3 class="h5 text-info"><i class="fas fa-map-marker-alt"></i> Address</h3>
        <p>ABC Retailers<br>123 Main Street<br>Johannesburg, South Africa</p>
    </div>

    <!-- Email -->
    <div class="mb-4">
        <h3 class="h5 text-info"><i class="fas fa-at"></i> Email</h3>
        <p><a href="mailto:info@abcretailers.com">info@abcretailers.com</a></p>
